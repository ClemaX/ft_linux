# vim: filetype=sh
# shellcheck shell=bash
# shellcheck disable=SC2034

name="i3status"
version="2.14"

source_base="$name-$version"

sources=("https://github.com/i3/i3status.git:$version")
md5sums=()

build()
{
	pushd "$SRCDIR/$source_base" || return
		mkdir -vp build
		pushd build || return
			meson ..

			ninja

			DESTDIR="$DESTDIR" ninja install
		popd || return
	popd || return
}
